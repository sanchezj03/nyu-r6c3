<table width="100">
<tr>
	<td style="width:50px"><%= select :phone, :mode, [["Home: ", "home"], ["Mobile: ", "mobile"], ["Work: ", "work"]] %></td>
	<td><%= text_field :phone, :number, :style => "width:120px" %></td>
</tr>
<tr>
	<td>Comments:</td>
	<td><%= text_area :phone, :comments, :style => "width:200px;height:50px" %></td>
</tr>
<tr>
	<td>Collected:</td>
	<td><%= date_select :phone, :collected_on %></td>
</tr>
</table>

