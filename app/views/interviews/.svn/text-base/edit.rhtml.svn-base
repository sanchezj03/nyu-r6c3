<div class="inner">
	<%= remote_link(child_caregivers_url(@child), 'caregivers', :lose_focus => true) %>
	<h3>Editing <%= @caregiver.name %></h3>

	<%= error_messages_for :caregiver %>
	<div class="indented">
		<% remote_update_form_for @caregiver, :element => 'caregivers', :url => child_caregiver_url(@child, @caregiver) do -%>
			<%= render :partial => 'form' %>
			<%= submit_tag "Save"%>
		<% end -%>
	</div>
</div>